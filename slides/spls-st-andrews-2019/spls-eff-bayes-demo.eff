(*Handling conditioning: collecting weights *)

let weighted : 'a (*! Score, e*)
               => rplus * 'a  (*! e*)
  = handler 
  | effect (Score w) k -> (fun w' -> continue k () (w' *.. w))
  | v -> (fun w -> (w,v))
  | finally prog -> prog (Exp 0.)








