let plot_weighted_fitted ()
  = repeat 15 (fun i ->
        let (Exp w, f) = 
          with random_sampler handle
          with weighted       handle
               fitted ()
        in
        perform
          (Print (to_string (exp w) ^ "\n"));
        plot f
             ("silly_regression_"
              ^ (to_string i) ^".dat")
      )



  
